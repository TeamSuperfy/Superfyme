<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/roundrec"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/imgMessageIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo1icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lblMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hey du Arschsack so und so. Hey so und so du Arschsack!" />

        <TextView
            android:id="@+id/lblMessageDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vor 2 Stunden"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>